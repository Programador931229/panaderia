<%- include('partials/_header')%>
</header>
<div class="container mb-3">
    <div class="row justify-content-center">
        <div class="col col-lg-5">
            <div class="card">
                <div class="card-body">
                    <div class="text-center text-white bg-primary h5">
                        <h4>Detalle de entrada</h4>
                    </div>
                    <form action="/detalleEntrada" method="post" style="background-color: white;">
                        <div class="form-group mb-3">
                            <label for="id">Identificador de Entrada</label>
                            <input class="form-control" type="number" id="id" name="id_entrada" value="<%=data1.id%>" readonly>
                        </div>
                        <div class="form-group mb-3">
                            <label for="materia">Materia prima</label>
                            <select class="form-select dropdown-toggle" name="id_materia_prima" id="materia">
                                <% for(const i in data2){ %>
                                    <option value="<%= data2[i].id_materia_prima%>"> <%=data2[i].nombre_materia_prima%> </option>    
                                <%}%>
                            </select>
                        </div>
                        <div class="form-group mb-3">
                            <label for="cantidad">Cantidad de entrada</label>
                            <input class="form-control" type="number" step="0.0001" name="cantidad_entrada" id="cantidad" required>
                        </div>
                        <div class="form-group mb-3 d-grid gap-2 col-6 mx-auto">
                            <button type="submit" class="btn btn-primary">Registrar</button>  
                        </div>
                        <div class="form-group mb-3 d-grid gap-2 col-6 mx-auto">
                            <a class="btn btn-danger" href="/principal">Home</a>  
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/_footer')%>