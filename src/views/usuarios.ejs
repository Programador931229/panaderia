<%- include('partials/_header')%>
</header>
<div class="container-fluid mb-3">
    <div class="row justify-content-center">
        <div class="col col-lg-10">
            <table class="table table-bordered table-hover text-center" style="background-color: white;">
                <div class="text-center text-white bg-primary h5">
                    <div class="text-center text-white bg-primary h5">
                            <h4>Lista de Usuarios</h4>
                    </div>
                </div>
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Id Empleado</th>
                        <th>Usuario</th>
                        <th>correo</th>
                        <th>rol de usuario</th>
                        <th>password</th>
                    </tr>
                </thead>
                <tbody>
                    <%if (data){%>
                        <% for (var i = 0; i < data.length; i++){%>
                        <tr>
                            <td><%=data[i].id_usuario%></td>
                            <td><%=data[i].id_empleado%></td>
                            <td><%=data[i].nombre_usuario%></td>
                            <td><%=data[i].correo%></td>
                            <td><%=data[i].nombre_roll%></td>
                            <td><%=data[i].clave%></td>
                        </tr>
                        <% }%>
                    <%}%>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('partials/_footer')%>