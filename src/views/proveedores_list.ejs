<%- include('partials/_header')%>
</header>
<div class="container-fluid mb-3">
    <div class="row justify-content-center">
        <div class="col col-lg-10">
            <table class="table table-bordered table-hover text-center" style="background-color: white;">
                <div class="text-center text-white bg-primary h5">
                    <div class="text-center text-white bg-primary h5">
                            <h4>Lista de Proveedores</h4>
                    </div>
                </div>
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Nombre</th>
                        <th>Apellido paterno</th>
                        <th>Apellido materno</th>
                        <th>Empresa</th>
                        <th>Tipo de cargamento</th>
                    </tr>
                </thead>
                <tbody>
                    <%if (data){%>
                        <% for (var i = 0; i < data.length; i++){%>
                        <tr>
                            <td><%=data[i].id_proveedor%></td>
                            <td><%=data[i].nombre%></td>
                            <td><%=data[i].apellido_paterno%></td>
                            <td><%=data[i].apellido_materno%></td>
                            <td><%=data[i].nombre_empresa%></td>
                            <td><%=data[i].tipo_cargamento%></td>
                        </tr>
                        <% }%>
                    <%}%>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('partials/_footer')%>