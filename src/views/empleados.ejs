<%- include('partials/_header')%>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Nombre</th>
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>
                        <th>Código postal</th>
                        <th>Género</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data){%>
                        <% for (var i = 0; i < data.length; i++) {%>
                        <tr>
                            <td><%= [i + 1] %> </td>
                            <td><%= data[i].nombre %></td>
                            <td><%= data[i].apellido_paterno %></td>
                            <td><%= data[i].apellido_materno %></td>
                            <td><%= data[i].codigo_postal %></td>
                            <td><%= data[i].id_genero %></td>
                            <td>
                                <a href="/delete/<%= data[i].id_persona %>" class="btn btn-danger">Eliminar</a>
                                <a href="/update/<%= data[i].id_persona %>" class="btn btn-info">Editar</a>
                            </td>
                        </tr>
                        <% }%>
                    <%} %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group mb-3">
                            <input class="form-control" type="text" name="nombre" placeholder="Nombre">
                        </div>
                        <div class="form-group mb-3">
                            <input class="form-control" type="text" name="apellido_paterno" placeholder="Apellido paterno">
                        </div>
                        <div class="form-group mb-3">
                            <input class="form-control" type="text" name="apellido_materno" placeholder="Apellido materno">
                        </div>
                        <div class="form-group mb-3">
                            <input class="form-control" type="text" name="codigo_postal" placeholder="Código postal">
                        </div>
                        <div class="form-group mb-3">
                            <input class="form-control" type="text" name="id_genero" placeholder="Género">
                        </div>
                        <div class="form-group mb-3 d-grid gap-2 col-6 mx-auto">
                            <button type="submit" class="btn btn-primary">Registrar</button>  
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/_footer')%>